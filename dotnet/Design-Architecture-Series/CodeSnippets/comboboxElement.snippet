<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>combobox</Title>
			<Shortcut>ecombobox</Shortcut>
			<Description>Code snippet for 'combobox' element</Description>
			<Author>Automate The Planet Ltd.</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>name</ID>
					<Default>MyComboBox</Default>
					<ToolTip>The name of the combobox element</ToolTip>
				</Literal>
				<Literal>
					<ID>locatorType</ID>
					<Default>Id</Default>
					<ToolTip>The type of the element locator</ToolTip>
				</Literal>
        <Literal>
          <ID>locator</ID>
          <Default>myUniqueId</Default>
          <ToolTip>The actual locator for the element</ToolTip>
        </Literal>
			</Declarations>
			<Code Language="csharp">
        <![CDATA[public IComboBox $name$
        {
            get
            {
                return this.ElementFinder.Find<IComboBox>(By.$locatorType$("$locator$"));
            }
        }]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>